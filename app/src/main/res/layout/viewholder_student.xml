<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textview_viewholder_student_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/viewholder_student_name_header"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_viewholder_student_name"
        app:layout_constraintTop_toBottomOf="@+id/textview_viewholder_student_name_header"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/color_black"
        android:textSize="14sp"
        tools:text="Вася Пупкин"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_viewholder_student_separator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/color_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_viewholder_student_name" />

    <TextView
        android:id="@+id/textview_viewholder_student_description_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/viewholder_student_description_header"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_viewholder_student_separator" />

    <TextView
        android:id="@+id/textview_viewholder_student_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/color_black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_viewholder_student_description_header"
        tools:text="Хороший студент" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_viewholder_student_description"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/color_darker_gray" />

</androidx.constraintlayout.widget.ConstraintLayout>