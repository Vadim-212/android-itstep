<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_viewholder_students_group_title_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/viewholder_students_group_title_header"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_viewholder_students_group_title"
        app:layout_constraintTop_toBottomOf="@+id/textview_viewholder_students_group_title_header"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/color_black"
        android:textSize="14sp"
        tools:text="Класс"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_viewholder_students_group_separator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/color_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_viewholder_students_group_title" />

    <TextView
        android:id="@+id/textview_viewholder_students_group_students_count_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/viewholder_students_group_students_count_header"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_viewholder_students_group_separator" />

    <TextView
        android:id="@+id/textview_viewholder_students_group_students_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/color_black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_viewholder_students_group_students_count_header"
        tools:text="10" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_viewholder_students_group_students_count"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/color_darker_gray" />

</androidx.constraintlayout.widget.ConstraintLayout>