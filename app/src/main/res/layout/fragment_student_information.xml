<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.StudentInformationFragment">

    <ImageView
        android:id="@+id/imageview_fragment_students_information_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="top|center"/>

    <TextView
        android:id="@+id/textview_fragment_students_information_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:gravity="center"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/textview_fragment_students_information_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:gravity="center"/>

</FrameLayout>